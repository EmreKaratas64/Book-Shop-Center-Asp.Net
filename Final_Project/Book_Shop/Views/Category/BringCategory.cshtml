@model Book_Shop.Models.Entity.KATEGORILER

@{
    ViewBag.Title = "Update Category";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(c => c.ID)
        @Html.TextBoxFor(c => c.ID, new { @class = "form-control" })
        <br />
        <label>Name</label>
        @Html.TextBoxFor(c => c.AD, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(c => c.AD, "", new { @style = "color:red" })
    </div>
    <div>
        <button class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i>&nbsp; Update Category</button>
    </div>
}


@model Book_Shop.Models.Entity.PERSONELLER
@{
    ViewBag.Title = "Update Employee";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{
<div class="form-group" style="margin-top:15px;margin-bottom:10px">
    <label>Employee ID</label>
    @Html.TextBoxFor(e => e.ID, new { @class = "form-control", required = "required" })
    <br />
    <label>Employee Name</label>
    @Html.TextBoxFor(e => e.PERSONEL, new { @class = "form-control", required = "required" })
    @Html.ValidationMessageFor(e => e.PERSONEL, "", new { @style = "color:red" })
    <br />
    <label>Employee Mail</label>
    @Html.TextBoxFor(e => e.MAIL, new { @class = "form-control", required = "required" })
    @Html.ValidationMessageFor(e => e.MAIL, "", new { @style = "color:red" })
</div>
    <div class="form-group" style="margin-top:15px">
        <button class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i>&nbsp; Update Employee</button>
    </div>
}


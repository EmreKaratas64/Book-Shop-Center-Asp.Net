@model Book_Shop.Models.Entity.MUSTERILER

@using (Html.BeginForm("Index", "ClientPanel", FormMethod.Post))

{

    <form class="form-horizontal">

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Name</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.AD, new { @class = "form-control", required = "" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Surname</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", required = "" })

            </div>

        </div>


        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Mail</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control", required = "" })

            </div>

        </div>


        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Username</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control", required = "" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Password</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control", required = "" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Photo</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control" })

            </div>

        </div>


        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Phone Number</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })

            </div>

        </div>



        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <div class="checkbox">

                    <label>

                        <input type="checkbox" required> I agree to the <a href="#"> terms and conditions</a>

                    </label>

                </div>

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-warning"><i class="fas fa-edit"></i>&nbsp; Update</button>

            </div>

        </div>

    </form>

}

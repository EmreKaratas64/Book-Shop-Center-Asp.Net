@model Book_Shop.Models.Entity.KASA
@{
    ViewBag.Title = "Update Case";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateFinancel", "Financel", FormMethod.Post))
{
<div class="form-group" style="margin-top:15px;margin-bottom:10px">
    <label>Case ID</label>
    @Html.TextBoxFor(c => c.ID, new { @class = "form-control" })
    <br />
    <label>Month and year</label>
    @Html.TextBoxFor(c => c.AYVEYIL, new { @class = "form-control", required = "required" })
    @Html.ValidationMessageFor(e => e.AYVEYIL, "", new { @style = "color:red" })
    <br />
    <label>Total amount at case</label>
    @Html.TextBoxFor(e => e.TUTAR, new { @class = "form-control", required = "required" })
    @Html.ValidationMessageFor(e => e.TUTAR, "", new { @style = "color:red" })
    <br />
</div>
    <div class="form-group" style="margin-top:15px">
        <button class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i>&nbsp; Update Case</button>
    </div>
}



@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title</title>
    <style>

        * {
            font-size: 20px;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            margin: 8px;
            background: #f0f7f5;
            margin-left: 15px;
            margin-right: 15px;
        }


        .navbar {
            width: 100%;
            margin-top: 20px;
            background-color: white;
            overflow: auto;
            background: #f0f7f5;
        }

            .navbar a {
                float: left;
                padding-top: 14px;
                padding-bottom: 14px;
                padding-right: 18px;
                padding-left: 18px;
                color: black;
                text-decoration: none;
                font-size: 16px;
                border-radius: 8px;
            }

                .navbar a:hover:not(:first-child) {
                    background-color: #000000;
                    color: white;
                }

        .active {
            background-color: #0e63ea;
            color: white !important;
        }

        .btn {
            font-size: 16px;
        }

        .add {
            /*background: #3377e0;*/
            background: #0e63ea;
            color: white;
            padding-top: 8px;
            padding-bottom: 8px;
            padding-left: 12px;
            padding-right: 12px;
            margin-top: 12px;
        }

        .table {
            background-color: white;
        }

        .add:hover {
            background: #2e9df7;
            color: white;
        }

        tr {
            height: 65px;
        }

        @@media screen and (max-width: 500px) {
            .navbar a {
                float: none;
                display: block;
            }
        }
    </style>
    <script src="https://kit.fontawesome.com/c1316eab0d.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="navbar">
        <a class="active" href="/Home/Index"><i class="glyphicon glyphicon-home"></i>&nbsp; Home Page</a>
        <a href="/Statistic/Index/"><i class="glyphicon glyphicon-stats"></i>&nbsp; Statistics</a>
        <a href="/Category/Index/"><i class="glyphicon glyphicon-list"></i>&nbsp; Categories</a>
        <a href="/Book/Index/"><i class="glyphicon glyphicon-book"></i>&nbsp; Books</a>
        <a href="/Author/Index/"><i class="glyphicon glyphicon-pencil"></i>&nbsp; Authors</a>
        <a href="/Client/Index/"><i class="glyphicon glyphicon-user"></i>&nbsp; Clients</a>
        <a href="/Employee/Index/"><i class="glyphicon glyphicon-eject"></i>&nbsp; Employees</a>
        <a href="/Financel/Index/"><i class="glyphicon glyphicon-euro"></i>&nbsp; Financial Statement</a>
        <a href="/Sells/Index/"><i class="glyphicon glyphicon-usd"></i>&nbsp; Sells</a>
        <a href="/Notification/Index/"><i class="fas fa-bell"></i>&nbsp; Notficiations</a>
        <a href="/Statistic/WeatherCard/"><i class="glyphicon glyphicon-link"></i>&nbsp; Weather Cards</a>
        @if (User.IsInRole("MANAGER"))
        {
            <a href="/Graph/Index/"><i class="fas fa-chart-pie"></i>&nbsp; Graphs</a>
            <a href="/Settings/Index/"><i class="glyphicon glyphicon-cog"></i>&nbsp; Settings</a>
        }
        <a href="/AdminLogin/LogOut/"><i class="glyphicon glyphicon-off"></i>&nbsp; Exit</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>
    <br />

</body>
</html> 